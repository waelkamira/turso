

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Meal {
  id             String   @id @default(uuid())
  userName       String
  createdBy      String
  userImage      String
  mealName       String
  selectedValue  String
  image          String
  ingredients    String
  theWay         String
  advise         String?
  link           String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @default(now())
  hearts         Int      @default(0) // يجب أن يكون من نوع Int وليس String
  likes          Int      @default(0)
  emojis         Int      @default(0)
}

model Action {
  id        String   @id @default(uuid())
  userEmail String
  mealId    String
  hearts    Int      @default(0)
  likes     Int      @default(0)
  emojis    Int      @default(0)
  createdAt DateTime @default(now())
}



model User {
  id        String   @id @default(uuid())
  name      String   @unique
  email     String   @unique
  password  String?
  isAdmin   Boolean  @default(false) // تحويل من String إلى Boolean
  image     String   @default("https://res.cloudinary.com/dh2xlutfu/image/upload/v1718369814/items/uefgzp5uba74cgiwnfdf.png")
  googleId  String?  @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}




